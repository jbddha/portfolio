#This function simply checks to see if the password you give it meets the minimum password requirements\
#More experiments with Regex
import re
upperLowerRegex = re.compile('\w*[A-Z]+[a-z]+\w*')
specCharRegex = re.compile('[^A-Za-z0-9]')
digitRegex = re.compile('\w*\d+\w*')
def isStrongPass(password):
    stillValid = True
    if len(password) <= 7:
        stillValid = False
    return(
        bool(upperLowerRegex.search(password))and 
        bool(specCharRegex.search(password)) and 
        bool(digitRegex.search(password) and 
        stillValid))
    
print(isStrongPass('T3Rm!NATOR'))
